<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="low_stock_report" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="generatedAt" class="java.time.LocalDateTime"/>
    <parameter name="generatedBy" class="java.lang.String"/>
    <parameter name="companyName" class="java.lang.String"/>
    <parameter name="productCount" class="java.lang.Integer"/>

    <field name="sku" class="java.lang.String"/>
    <field name="name" class="java.lang.String"/>
    <field name="quantityInStock" class="java.lang.Integer"/>
    <field name="reorderLevel" class="java.lang.Integer"/>
    <field name="reorderQuantity" class="java.lang.Integer"/>
    <field name="unitPrice" class="java.math.BigDecimal"/>

    <variable name="totalReorderValue" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{unitPrice}.multiply(new java.math.BigDecimal($F{reorderQuantity}))]]></variableExpression>
    </variable>

    <title>
        <band height="80">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30" forecolor="#CC0000"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[LOW STOCK ALERT REPORT]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{companyName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="60" width="277" height="15"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Products Requiring Attention: " + $P{productCount}]]></textFieldExpression>
            </textField>
            <textField pattern="yyyy-MM-dd HH:mm:ss">
                <reportElement x="278" y="60" width="277" height="15"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[java.time.format.DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss").format($P{generatedAt})]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="70" height="25" backcolor="#FFCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[SKU]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="70" y="0" width="160" height="25" backcolor="#FFCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Product Name]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="230" y="0" width="70" height="25" backcolor="#FFCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Current]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="300" y="0" width="70" height="25" backcolor="#FFCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Reorder At]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="370" y="0" width="80" height="25" backcolor="#FFCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Order Qty]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="450" y="0" width="105" height="25" backcolor="#FFCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Est. Cost]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="70" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{sku}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="70" y="0" width="160" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="230" y="0" width="70" height="20" forecolor="#CC0000"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{quantityInStock}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="70" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{reorderLevel}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="370" y="0" width="80" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{reorderQuantity}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="450" y="0" width="105" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{unitPrice}.multiply(new java.math.BigDecimal($F{reorderQuantity}))]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="277" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Generated by: " + $P{generatedBy}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="377" y="10" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="477" y="10" width="78" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[" of " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="40">
            <staticText>
                <reportElement x="0" y="10" width="450" height="25"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Estimated Reorder Cost:]]></text>
            </staticText>
            <textField pattern="$#,##0.00">
                <reportElement x="450" y="10" width="105" height="25"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{totalReorderValue}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
