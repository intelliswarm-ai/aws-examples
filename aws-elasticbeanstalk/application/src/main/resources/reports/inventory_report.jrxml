<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="inventory_report" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="generatedAt" class="java.time.LocalDateTime"/>
    <parameter name="generatedBy" class="java.lang.String"/>
    <parameter name="companyName" class="java.lang.String"/>
    <parameter name="totalValue" class="java.math.BigDecimal"/>
    <parameter name="reorderCount" class="java.lang.Long"/>

    <field name="sku" class="java.lang.String"/>
    <field name="name" class="java.lang.String"/>
    <field name="quantityInStock" class="java.lang.Integer"/>
    <field name="reorderLevel" class="java.lang.Integer"/>
    <field name="unitPrice" class="java.math.BigDecimal"/>
    <field name="status" class="ai.intelliswarm.inventory.model.ProductStatus"/>

    <variable name="totalProducts" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{sku}]]></variableExpression>
    </variable>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[INVENTORY REPORT]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{companyName}]]></textFieldExpression>
            </textField>
            <textField pattern="yyyy-MM-dd HH:mm:ss">
                <reportElement x="0" y="60" width="555" height="15"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[java.time.format.DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss").format($P{generatedAt})]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="80" width="277" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Inventory Value: $" + $P{totalValue}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="278" y="80" width="277" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Products Needing Reorder: " + $P{reorderCount}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="80" height="25" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[SKU]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="80" y="0" width="180" height="25" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Product Name]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="260" y="0" width="70" height="25" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Stock]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="330" y="0" width="70" height="25" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Reorder]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="400" y="0" width="80" height="25" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Unit Price]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="480" y="0" width="75" height="25" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Status]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="80" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{sku}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="80" y="0" width="180" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="260" y="0" width="70" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{quantityInStock}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="330" y="0" width="70" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{reorderLevel}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="400" y="0" width="80" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{unitPrice}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="480" y="0" width="75" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{status}.name()]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="277" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Generated by: " + $P{generatedBy}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="377" y="10" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="477" y="10" width="78" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[" of " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Products: " + $V{totalProducts}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
