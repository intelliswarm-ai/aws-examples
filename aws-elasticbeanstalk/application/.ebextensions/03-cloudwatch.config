option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 30

files:
  "/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/web.stdout.log",
                  "log_group_name": "/aws/elasticbeanstalk/{instance_id}/var/log/web.stdout.log",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/web.stderr.log",
                  "log_group_name": "/aws/elasticbeanstalk/{instance_id}/var/log/web.stderr.log",
                  "log_stream_name": "{instance_id}"
                }
              ]
            }
          }
        }
      }
